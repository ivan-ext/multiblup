{
	"defaultSeverity": "warn",
	"extends": ["tslint:recommended"],
	"jsRules": {},
	"rules": {
		"only-arrow-functions": [true, "allow-named-functions"],
		"arrow-parens": [false],
		"typedef": [true, "call-signature", "parameter", "member-variable-declaration"],
		"quotemark": [true, "single"],
		"trailing-comma": [false],
		"indent": [true, "tabs", 4],
		"no-empty": [false],
		"semicolon": [false]
	},
	"rulesDirectory": []
}
